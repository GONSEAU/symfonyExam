{% extends 'base.html.twig' %}

{% block title %} list des projets{% endblock %}

{% block body %}

<h1> Project Hub</h1>
<a href="/add_project" >Ajouter un Projet</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Ajout√© le</th>
            <th>Statut</th>
            <th>Action</th>
        </tr>
